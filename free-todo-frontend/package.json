{
	"name": "free-todo-frontend",
	"version": "0.1.0",
	"private": true,
	"main": "electron/main.js",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome lint ./app ./components",
		"format": "biome format --write ./app ./components",
		"check": "biome check ./app ./components",
		"electron:dev": "concurrently \"cross-env BROWSER=none next dev\" \"wait-on http://localhost:3000 && electron .\"",
		"electron:build": "next build",
		"electron:pack": "electron-builder --dir",
		"electron:dist": "electron-builder",
		"electron:dist:mac": "electron-builder --mac",
		"electron:dist:win": "electron-builder --win",
		"electron:dist:linux": "electron-builder --linux"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.19",
		"framer-motion": "^11.11.10",
		"lucide-react": "^0.469.0",
		"next": "16.0.8",
		"next-themes": "^0.4.6",
		"react": "19.2.1",
		"react-dom": "19.2.1",
		"react-markdown": "^10.1.0",
		"remark-gfm": "^4.0.1",
		"tailwind-merge": "^3.3.1",
		"zustand": "^5.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"autoprefixer": "^10.4.22",
		"baseline-browser-mapping": "^2.9.5",
		"concurrently": "^9.1.0",
		"cross-env": "^7.0.3",
		"electron": "^33.2.0",
		"electron-builder": "^25.1.8",
		"tailwindcss": "^4",
		"typescript": "^5",
		"wait-on": "^8.0.1"
	}
}
