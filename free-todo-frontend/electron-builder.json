{
	"appId": "com.freetodo.app",
	"productName": "FreeTodo",
	"copyright": "Copyright Â© 2025 FreeTodo",
	"directories": {
		"output": "dist",
		"buildResources": "electron/resources"
	},
	"files": [
		"electron/**/*",
		".next/**/*",
		"public/**/*",
		"package.json",
		"next.config.mjs",
		"postcss.config.mjs",
		"tailwind.config.ts",
		"node_modules/**/*"
	],
	"extraResources": [
		{
			"from": "public",
			"to": "public",
			"filter": ["**/*"]
		}
	],
	"mac": {
		"target": [
			{
				"target": "dmg",
				"arch": ["x64", "arm64"]
			},
			{
				"target": "zip",
				"arch": ["x64", "arm64"]
			}
		],
		"icon": "electron/icon.icns",
		"category": "public.app-category.productivity",
		"hardenedRuntime": true,
		"gatekeeperAssess": false,
		"entitlements": "electron/entitlements.mac.plist",
		"entitlementsInherit": "electron/entitlements.mac.plist"
	},
	"dmg": {
		"contents": [
			{
				"x": 130,
				"y": 220
			},
			{
				"x": 410,
				"y": 220,
				"type": "link",
				"path": "/Applications"
			}
		],
		"window": {
			"width": 540,
			"height": 380
		}
	},
	"win": {
		"target": [
			{
				"target": "nsis",
				"arch": ["x64", "ia32"]
			},
			{
				"target": "portable",
				"arch": ["x64"]
			}
		],
		"icon": "electron/icon.ico",
		"artifactName": "${productName}-${version}-${arch}.${ext}"
	},
	"nsis": {
		"oneClick": false,
		"perMachine": false,
		"allowToChangeInstallationDirectory": true,
		"deleteAppDataOnUninstall": false,
		"createDesktopShortcut": true,
		"createStartMenuShortcut": true,
		"shortcutName": "FreeTodo"
	},
	"linux": {
		"target": [
			{
				"target": "AppImage",
				"arch": ["x64"]
			},
			{
				"target": "deb",
				"arch": ["x64"]
			},
			{
				"target": "rpm",
				"arch": ["x64"]
			}
		],
		"icon": "electron/icon.png",
		"category": "Office",
		"synopsis": "A modern todo and project management application",
		"description": "FreeTodo is a powerful todo and project management application built with Next.js and Electron."
	},
	"publish": null
}
